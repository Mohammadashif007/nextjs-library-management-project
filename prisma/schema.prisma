generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Books {
  id              Int         @id @default(autoincrement())
  title           String
  author          String
  copies          Int
  category        String
  isbn            String
  publicationYear Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  images          BookImage[]

  @@map("book")
}

model BookImage {
  id        Int      @id @default(autoincrement())
  book      Books    @relation(fields: [bookId], references: [id])
  bookId    Int
  url       String
  provider  String
  publicId  String?
  width     Int?
  height    Int?
  mime      String?
  size      Int?
  alt       String?
  createdAt DateTime @default(now())
}
